/* pages/my_userinfo/index.wxss */
.userinfo {
  padding: 0 30rpx;
  background-color: #ffffff;
}

.list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx   0;
}

.myr {
  width: 28rpx;
  margin-left: 32rpx;
}

.icontent {
  width: 90rpx;
  height: 90rpx;
}

.icontent image{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.list > view {
  display: flex;
  align-items: center;
}

.list > text {
  color: rgba(36, 42, 58, 1);
  font-size: 32rpx;
}

.itext {
  color: rgba(140, 141, 142, 1);
  font-size: 32rpx;
}

.bindingphone {
  position: relative;
}

.bindingphone button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  left: 0;
  top: 0;
}