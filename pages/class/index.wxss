/* pages/class/index.wxss */

.topUser {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 9rpx 32rpx;
  background-color: #ffffff;
}

.avator {
  width: 72rpx;
  height: 72rpx;
  position: relative;
}

.avator .img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.qiehuan {
  width: 20rpx;
  height: 20rpx;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  right: 0;
  bottom: 0;
}

.name {
  color: rgba(26, 29, 30, 1);
  font-size: 32rpx;
  text-align: center;
  margin-left: 20rpx;
}

.select_user {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 10;
}

.userlist {
  padding: 0 32rpx;
  background-color: #ffffff;
}

.listcenter {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.listcenter .l {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.select_avator {
  width: 72rpx;
  height: 72rpx;
}

.select_avator .img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.select_name {
  color: rgba(72, 74, 75, 1);
  font-size: 32rpx;
  text-align: left;
  margin-left: 20rpx;
}

.selectimg {
  width: 32rpx;
  display: none;
}

.ulistselect .selectimg {
  display: block;
}

.ulistselect .select_name {
  color: #009BFD;
}

.classList {
  height: 300rpx;
  position: relative;
}

.classList .t1 {
  height: 100rpx;
  background-color: #ffffff;
}

.classList .t2 {
  height: 200rpx;
}

.classList .t3 {
  position: absolute;
  width: 686rpx;
  height: 280rpx;
  background-color: #ffffff;
  left: 32rpx;
  top: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 0 40rpx 10rpx #eee;
  z-index: 10;
}

.classList .t3 .cen {
  padding: 0 32rpx;
  height: 100%;
}

.cent1 {
  height: 157rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 23rpx 0;
}

.cent2 {
  height: 122rpx;
}

.cent1 view:first-child {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 57, 71, 1);
}

.cent1 view:last-child {
  color: rgba(51, 57, 71, .8);
  font-size: 28rpx;
}

.cent2 .center {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  padding: 0 25rpx;
  position: relative;
}
.cent2 .center .l {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.line {
  width: 1rpx;
  height: 32rpx;
  background-color: #E4E4E4;
}

.cent2 .center .l .lo {
  width: 32rpx;
}

.cent2 .center .l .to {
  width: 22rpx;
}

.cent2 .center .l .text {
  margin: 0 22rpx;
  color: rgba(26, 29, 30, 1);
  font-size: r32px;
}

.billcontent {
  padding: 0 32rpx;
  background-color: #ffffff;
}

.list {
  padding: 30rpx 0;
}

.center {
  display: flex;
  align-items: center;
  height: 100rpx;
}

.l1 {
  width: 80rpx;
  height: 80rpx;
  position: relative;
}

.l1 image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.news {
  display: inline-block;
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #FD1800;
  right: 0;
  top: 0;
}

.l2 {
  flex: 1;
  height: 90%;
}

.l2center > view:first-child {
  color: rgba(36, 42, 58, 1);
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.l2center > view:first-child text:last-child {
  color: rgba(36, 42, 58, .4);
  font-size: 26rpx;
}

.l2center > view:last-child {
  color: rgba(36, 42, 58, .6);
  font-size: 28rpx;
}

.l2center {
  height: 100%;
  padding: 0 0 0 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.l3 {
  color: rgba(253, 24, 0, 1);
  font-size: 32rpx;
}

.dynamic .tit {
  color: rgba(26, 29, 30, 1);
  font-size: 32rpx;
  font-weight: bold;
  padding: 40rpx 32rpx 30rpx 32rpx;
}